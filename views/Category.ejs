 <script type="text/javascript">
  var a;
  var s;
function show_hide(s){


if (a==0) {
  document.getElementById("textarea"+s).style.display="none";
  document.getElementById("answerbutton"+s).style.display="none";
  return a=1;
}
else{
  document.getElementById("textarea"+s).style.display="inline";
  document.getElementById("answerbutton"+s).style.display="inline";
  return a=0;
}
}
</script>

