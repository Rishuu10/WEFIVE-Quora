      <script type="text/javascript">
      
        var s;
    function show_hide(s){
      
   
    
    
      var a=document.getElementById("pageanswers");
      var b=document.getElementById("pagequestions");
     
      var y = document.getElementById("page"+s);
    
     if(s==="answers"){
      
        a.style.display="inline";
        b.style.display="none";
        
    
       }
    
    if(s==="questions"){
    
        a.style.display="none";
        b.style.display="inline";
        
       }
    
      if(s==="setting"){
     
        a.style.display="none";
        b.style.display="none";
        
       }
   
    }

    
